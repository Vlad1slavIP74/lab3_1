<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/Input"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="18"
        android:singleLine="false"
        android:textColor="#000000"
        android:hint="Введіть вхідне число"
        android:textColorHint="#6E746F"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="319dp"
        android:layout_height="64dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="Алгоритм факторизації Ферма"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Button1"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:onClick="onButtonClick"
        android:text="Обрахувати"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="Результат"
        android:textColor="#000000"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="@+id/Input"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Input"
        app:layout_constraintTop_toBottomOf="@+id/Input" />

    <TextView
        android:id="@+id/TimeResult"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="150dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="@+id/Button1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Button1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CountResult"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="470dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>